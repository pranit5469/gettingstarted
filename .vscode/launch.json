{
   "version": "0.2.0",
   "configurations": [
       
       {
           "type": "node",
           "request": "launch",
           "protocol": "inspector",
           "port": 9229,
           "name": "WebdriverIO",
           "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/wdio",
           "windows": {
               "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/wdio.cmd"
           },
           "timeout": 1000000,
           "cwd": "${workspaceRoot}",
           "console": "integratedTerminal",
           "args":[
               "", "${workspaceRoot}/wdio.debug.conf.js",

               "--spec", "${relativeFile}"

               ]
       
           }
       ]
}